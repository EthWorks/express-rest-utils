{
  "name": "@restless/ethereum",
  "version": "0.2.2",
  "author": "Piotr Szlachciak <szlachciak.piotr@gmail.com>",
  "description": "Ethereum utilities for restless",
  "license": "Unlicense",
  "keywords": [
    "ethereum",
    "express",
    "rest",
    "api",
    "validation",
    "async",
    "javascript",
    "typescript",
    "library"
  ],
  "homepage": "https://github.com/EthWorks/restless",
  "bugs": {
    "url": "https://github.com/EthWorks/restless/issues"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "scripts": {
    "prepublishOnly": "yarn build",
    "build": "rm -rf dist && yarn build:esm && yarn build:cjs",
    "build:esm": "tsc -p tsconfig.build.json --outDir dist/esm --module ES6",
    "build:cjs": "tsc -p tsconfig.build.json --outDir dist/cjs --declaration false",
    "test": "mocha -r ts-node/register \"test/**/*.test.ts\"",
    "lint": "tslint --project tsconfig.json \"src/**/*.ts\" \"test/**/*.ts\""
  },
  "dependencies": {
    "@restless/sanitizers": "^0.2.0",
    "ethers": "^5.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.17.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^3.5.2"
  }
}
